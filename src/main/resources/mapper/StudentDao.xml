<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.finalproj.demo.dao.IStudent">
    <select id="queryStudent" resultType = "com.finalproj.demo.domain.Student">
        SELECT studentid, email, englishName, course, teacher, password
        FROM studentinfo
    </select>

    <select id="searchByEmail" resultType="com.finalproj.demo.domain.Student">
        SELECT studentid, email, englishName, course, teacher, password
        FROM studentinfo
        WHERE
        email=#{email}
    </select>

    <insert id="insertStudentbyId"  useGeneratedKeys="true" keyProperty="email"
            keyColumn="studentid" parameterType="com.finalproj.demo.domain.Student">
        INSERT INTO studentinfo (studentid,email,englishName,course,teacher,password)
        VALUES (default,#{email},#{englishName},#{course},#{teacher},#{password})
    </insert>

    <update id="updateStudent" parameterType="com.finalproj.demo.domain.Student">
        UPDATE studentinfo
        <set>
            <if test="email != null">email=#{email},</if>
            <if test="englishName != null">englishName=#{englishName},</if>
            <if test="course != null">course=#{course},</if>
            <if test="teacher != null">teacher=#{teacher},</if>
            <if test="password != null">password=#{password},</if>
        </set>
        where studentid=#{studentid}
    </update>

    <delete id="deleteStudent">
        DELETE FROM
        studentinfo
        WHERE
        studentid = #{studenntid}
    </delete>


</mapper>